
# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/traveler_hub

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=uploads

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Default Admin Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Password123!

# Default Test User Credentials
TEST_DRIVER_EMAIL=driver@example.com
TEST_DRIVER_PASSWORD=Password123!
TEST_PASSENGER_EMAIL=passenger@example.com
TEST_PASSENGER_PASSWORD=Password123!

#
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Modify values as needed
# 3. Run 'node src/scripts/downloadSampleImages.js' to download sample profile images
# 4. Run 'node src/scripts/seedUsers.js' to create test users with sample data
# 5. Start the server with 'npm start'
